Q2. Create an Android Application to find the factorial of a number and Display the Resulton
Alert Box.

import android.content.DialogInterface;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;
import androidx.appcompat.app.AlertDialog;
import androidx.appcompat.app.AppCompatActivity;
public class MainActivity extends AppCompatActivity {

    EditText factedit;
    Button factbtn;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        factedit = (EditText) findViewById(R.id.factedit);

        factbtn = (Button) findViewById(R.id.factbtn);
        factbtn.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                fact();
            }
        });
    }

    private void fact(){
        int num =Integer.parseInt(factedit.getText().toString());

        long fact=1;
        for(int i=num;i>0;i--)
        {
            fact=fact*i;
        }

        AlertDialog alertDialog = new AlertDialog.Builder(this)
                .setTitle("Factorial Number")
                .setMessage("your factorial is :"+fact)
                .setPositiveButton("Yes", new DialogInterface.OnClickListener() {
                    @Override
                    public void onClick(DialogInterface dialog, int which) {
                        Toast.makeText(MainActivity.this, "", Toast.LENGTH_SHORT).show();
                    }
                })
                .setNegativeButton("No", new DialogInterface.OnClickListener() {
                    @Override
                    public void onClick(DialogInterface dialog, int which) {
                        Toast.makeText(MainActivity.this, "", Toast.LENGTH_SHORT).show();
                    }
                })

                .show();
    }
}


