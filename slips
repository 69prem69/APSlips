import android.widget.TextView;

public class SecondActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_second);

        TextView txtname=findViewById(R.id.name);
        TextView txtclass=findViewById(R.id.Class);
        TextView txtgender=findViewById(R.id.Gender);
        TextView txtmarks=findViewById(R.id.Marks);
        TextView txthobbies=findViewById(R.id.Hobbies);
        TextView txtsurname=findViewById(R.id.surname);

        Bundle bundle=getIntent().getExtras();
        if(bundle!=null) {
            txtname.setText("Name: " + bundle.getString("Name"));
            txtclass.setText("Class: " + bundle.getString("Year"));
            txtgender.setText("Gender: " + bundle.getString("Gender"));
            txtmarks.setText("Marks: " + bundle.getString("Marks"));
            txthobbies.setText("Hobbies: " + bundle.getString("Hobbies"));
            txtsurname.setText("Surname: " + bundle.getString("Surname"));
        }
    }
}
