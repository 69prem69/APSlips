        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewToTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewToDate"
        android:layout_toEndOf="@id/textViewToDateValue"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="2:22 PM"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Checkbox for All-day -->
    <CheckBox
        android:id="@+id/checkBoxAllDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewToTimeValue"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="All-day" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBoxAllDay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Submit" />
    <TextView
        android:id="@+id/textViewSelectedDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
</RelativeLayout>
